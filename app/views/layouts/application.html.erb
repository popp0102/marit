<!DOCTYPE html>
<html>
  <head>
    <title>Marit</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
  </head>

  <body>
    <div class="jumbotron jumbotron-fluid text-center text-info" style="padding-top: 10px !important; padding-bottom: 10px !important">
      <h1>MAC Address Randomization Identification Tool</h1>
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <a class="navbar-brand" href="/">MARIT</a>

      <ul class="navbar-nav">
        <li class="nav-item" id="nav_list_network_devices">
          <a class="nav-link" href="/network_devices">Network Devices</a>
        </li>
        <li class="nav-item" id="nav_scan_network_devices">
          <a class="nav-link" href="/network_scans">Scan Network</a>
        </li>
        <li class="nav-item" id="nav_rts_network_devices">
          <a class="nav-link" href="/network_scans/rts">RTS Scan</a>
        </li>
        <li class="nav-item" id="nav_add_network_devices">
          <a class="nav-link" href="/network_devices/new">Add Device</a>
        </li>
      </ul>
    </nav>

    <script>
      $(document).ready(function() {
        $('#nav_list_network_devices, #nav_add_network_devices, #nav_scan_network_devices, #nav_rts_network_devices' ).click(function() {
          localStorage.setItem('active_tab', $(this).attr('id'));
        });
        $('li.active').removeClass('active');
        active_tab_id = '#' + localStorage.getItem('active_tab');
        $(active_tab_id).addClass('active');

      });
    </script>

    <div class="container float-left pt-3 my-3" style="margin-top: 30px; margin-left: 10px" >
      <%= yield %>
    </div>
  </body>
</html>

