<%= form_with model: @network_device, url: network_devices_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <label for="mac">MAC Address:</label>
    <input type="text" name='network_device[mac_address]' class="form-control" placeholder="Enter MAC Address" id="network_device_mac_address">
  </div>
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name='network_device[name]' class="form-control" placeholder="Enter Name" id="network_device_name">
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
<% end %>
