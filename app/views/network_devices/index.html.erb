<div class="row">
  <table class='table table-hover'>
    <thead class='thead-light'>
      <tr>
        <th>Name</th>
        <th>Interface</th>
        <th>MAC</th>
        <th>IP</th>
        <th>Created</th>
        <th>Last Detected</th>
        <th>Actions</th>
      <tr>
    </thead>
    <% @network_devices.each do |network_device| %>
      <tr>
        <td><%= network_device.name%></td>
        <td><%= network_device.interface%></td>
        <td><%= network_device.mac_address%></td>
        <td><%= network_device.ip_address%></td>
        <td><%= network_device.created_at%></td>
        <td><%= network_device.detected_at%></td>
        <td class='row'>
          <div class='float-left col-xs-4'>
            <button type='button' class='btn btn-primary'>RTS/CTS</button>
          </div>
          <div class='float-left col-xs-4'>
            <%= link_to 'Edit', edit_network_device_path(network_device), class: 'btn btn-success'%>
          </div>
          <div class='float-left col-xs-4'>
            <%= button_to 'Delete', network_device, method: :delete, class: 'btn btn-danger float-left'%>
          </div>
        </td>
      <tr>
    <% end %>
  </table>
  <button id='clear_all_devices' class='btn btn-info'>Clear All Devices</button>
</div>

<script>
  $(document).ready(function() {
      $("#clear_all_devices").click(function() {
        fetch('/network_devices/destroy_all', { method: 'DELETE' })
        .then(res => { location.reload() })
      });
  });
</script>

